<!DOCTYPE html>
<html lang="{{ metadata.lang or 'en' }}" data-theme="system">
  {% include "head.njk" %}
  <body>
    {% include "header.njk" %}
    <main class="page-content" aria-label="Content">
      <div class="wrapper">
        {{ content | safe }}
      </div>
    </main>
    {% include "footer.njk" %}

    <!-- Include analytics in production -->
    {% if kitsDna.environment == 'production' %}
    {% include "simple-analytics.njk" %}
    {% endif %}

    <!-- Include jQuery from a CDN -->
