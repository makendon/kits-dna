<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  
  <!-- Content Security Policy in production -->
  {% if kitsDna.environment == 'production' %}
  {% include "csp.njk" %}
  {% endif %}

  <!-- SEO -->
  {% include "seo.njk" %}

  <!-- Mastodon verification -->
  <link rel="me" href="https://mastodon.social/@makendon"/>
  
  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="/assets/favicons-emoji/favicon.ico">

  <!-- Image preloading -->
  <link rel="preload" as="image" href="/assets/images/hawaii-logo.webp">
  <link rel="preload" as="image" href="/assets/images/me2.png">
  <link rel="preload" as="image" href="/assets/images/me3.png">
  <link rel="preload" as="image" href="/assets/images/me.jpeg">
  
  <!-- CSS -->
  <link rel="stylesheet" href="/css/styles.css">

  <!-- Font Awesome -->
  <script src="https://kit.fontawesome.com/448e552757.js" crossorigin="anonymous"></script>

  <!-- Google Fonts optimisation -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <!-- JSON-LD -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "{{ metadata.title }}",
      "url": "{{ metadata.url }}"
    }
  </script>

</head>
