<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  
  <!-- Production -->
  {% if kitsDna.environment == 'production' %}
  {% endif %}

  <!-- SEO -->
  {% include "seo.njk" %}

  <!-- Mastodon verification -->
  <link rel="me" href="https://mastodon.social/@makendon"/>
  
  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="/assets/favicons-logo/favicon.ico">

  <!-- Image preloading -->
  <link rel="preload" as="image" href="/assets/images/hawaii-logo.webp">
  
  <!-- Prevent theme flash - must run before CSS -->
  <script>
  (function() {
    const savedTheme = localStorage.getItem('theme');
    const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
    
    if (savedTheme === 'dark' || (!savedTheme && systemPrefersDark)) {
      document.documentElement.setAttribute('data-theme', 'dark');
    }
  })();
  </script>

  <!-- CSS -->
  {% css %}{% include "dist/css/styles.css" %}{% endcss %}
  <style>{% getBundle "css" %}</style>

  <!-- Font Awesome -->
  {% getBundle "fontawesome" %}

  <!-- JSON-LD -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "{{ metadata.title }}",
      "url": "{{ metadata.url }}"
    }
  </script>

</head>
