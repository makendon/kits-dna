<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  
  <!-- Content Security Policy in production -->
  {% if kitsDna.environment == 'production' %}
  {% include "csp.njk" %}
  {% endif %}

  <!-- SEO -->
  {% include "seo.njk" %}

  <!-- Mastodon verification -->
  <link rel="me" href="https://mastodon.social/@makendon"/>
  
  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="/assets/favicons-emoji/favicon.ico">

  <!-- Image preloading -->
  <link rel="preload" as="image" href="/assets/images/hawaii-logo.webp">
  <link rel="preload" as="image" href="/assets/images/me2.webp">
  <link rel="preload" as="image" href="/assets/images/me3.webp">
  <link rel="preload" as="image" href="/assets/images/me.webp">
  
  <!-- CSS -->
  {% include "critical.njk" %}
  <link rel="stylesheet" href="/css/styles.css">

  <!-- Font Awesome -->
  <link rel="preconnect" href="https://cdnjs.cloudflare.com" crossorigin>
  <link rel="dns-prefetch" href="https://cdnjs.cloudflare.com">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

  <!-- JSON-LD -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "{{ metadata.title }}",
      "url": "{{ metadata.url }}"
    }
  </script>

</head>
