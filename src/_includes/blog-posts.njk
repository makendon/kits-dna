<div>
  {%- for batch in collections.posts | reverse | batch(3) -%}
    <div class="grid">
      {%- for post in batch -%}
        <div>
          <article>
            <header>
              <small><code>{{ post.date | dateFormat }}</code></small>
            </header>
            <hgroup>
            <span class="blog-post-list-heading"><a href="{{ post.url }}">{{ post.data.title }}</a></span>
            <p>{{ post.data.description }}</p>
            </hgroup>
          </article>
        </div>
      {%- endfor -%}
    </div>
  {%- endfor -%}
</div>
