<div class="blog-post-list-grid">
  {%- for post in collections.posts | reverse -%}
    <article>
      <header>
        <small><code>{{ post.date | dateFormat }}</code></small>
      </header>
      <h4><a href="{{ post.url }}">{{ post.data.title }}</a></h4>
      <p>{{ post.data.description }}</p>
    </article>
  {%- endfor -%}
</div>
